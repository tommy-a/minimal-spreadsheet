{
    "compilerOptions": {
        "outDir": "./dist/",
        "module": "commonjs",
        "noImplicitAny": true,
        "target": "es5",
        "lib": [
            "es5",
            "es6",
            "es2017",
            "dom"
        ],
        "jsx": "react",
        "strictNullChecks": true,
        "downlevelIteration": true,
        "sourceMap": true,
        "typeRoots": [
            "./node_modules/@types"
        ],
        "plugins": [
            {
                "name": "typescript-styled-plugin"
            }
        ]
    }
}